@model DetailsViewModel




<div class="shop-det">
    <div class="det-header">
        <i class="fa fa-home"></i>
        <a asp-controller="home" asp-action="index"> خانه </a><span> > </span> <a asp-controller="Store" asp-action="show" > محصولات </a>
        <hr size="2px" color="gray">
    </div>
    <div class="base-det-product">
        @if (Model.product_Image.Count>0)
        {
            <div class="product-img" id="zoom">
                <img src="/img/@Model.product_Image[0]" id="zoom1">
            </div>
        }
        <div class="other-img" id="wallchanger">
            @if (Model.product_Image.Count>1)
            {
                @for (int i = 0; i < Model.product_Image.Count; i++)
                {
                    <img src="/img/@Model.product_Image[i]" alt="">
                }
            }
         </div>
        <div class="more-det">
            <h1> @Model.ProductName </h1>
            <hr size="2px" color="gray">
            <div class="full-det">
                <div class="off-discount">
                    <s> @Model.Price  </s>
                    <span> @Money.formatMoney(ApplyOff.Calculate(Model.Price, Model.percent)) </span>
                    <h1> @Model.percent% </h1>
                </div>
                <div class="select-opt">
                    <select>
                        <option> - - - - - </option>
                        <option> 18 ماه گارانتی </option>
                        <option> 3 ماه گارانتی تعویض</option>
                    </select>
                    <select>
                        <option> - - - - - </option>
                        <option> آبی </option>
                        <option> مشکی </option>
                    </select>
                </div>
                <div class="fast-information">
                    <p> رم : 8 گیگ </p>
                    <p> حافظه : 256 گیگ </p>
                    <p> گرافیک : اینتل </p>
                </div>
                <br>
                <div class="set-product-button">
                    <span class="add-to-list">
                        <a asp-action="AddFavorit" asp-controller="Account" asp-route-Id="@Model.Id" asp-route-username="@User.Identity.Name">
                            <i class="fa fa-heart"></i>
                            افزودن به علاقه مندی
                        </a>
                    </span>
                    <span class="product-sells">
                        <i class="fa fa-shopping-cart"></i>
                        افزودن به سبد خرید
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="suggested-product">
        <p>
            @Model.Description    </p>
        <partial name="TopProduct"  model = "@Model.tops"/>
    </div>
